extends layout

block content
    h1 #{title}
    form(method='POST', action='/articulo/editar/'+articulo._id)
        #form-group
            label Title:
            input.form-control(name='title', type='text', value=articulo.title)
        #form-group
            label Author:
            input.form-control(name='author', type='text', value=articulo.author)
        #form-group
            label Body:
            textarea.form-control(name='body')= articulo.body
        br
        input.btn.btn-primary(type='submit', value='Submit')